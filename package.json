{
  "name": "@curium.rocks/node-ts-starter",
  "version": "0.1.0",
  "description": "A starter template for a Node.JS typescript project",
  "main": "build/src/index.js",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --require source-map-support/register --recursive 'test/**/*.ts'",
    "build": "node_modules/typescript/bin/tsc --project ./",
    "lint": "eslint src --ext .ts",
    "clean": "rm -fr build",
    "doc": "typedoc src/index.ts",
    "prepare": "npm run build",
    "sonarscan": "sonar-scanner -Dsonar.qualitygate.wait=true -Dsonar.projectKey=node-ts-starter -Dsonar.sources=. -Dsonar.host.url=https://$SONAR_QUBE_HOST_NAME -Dsonar.login=$SONAR_LOGIN -Dsonar.javascript.lcov.reportPath=coverage/"
  },
  "repository": {
    "type": "git",
    "url": "https://git.curium.rocks/curium.rocks/node-ts-starter.git"
  },
  "keywords": [
    "node.js",
    "typescript",
    "sonarqube",
    "jenkins",
    "jenkins-k8s"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/serialport": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "chai": "^4.3.4",
    "eslint": "^7.25.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "sonarqube-scanner": "^2.8.0",
    "ts-node": "^9.1.1",
    "typedoc": "^0.21.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.2.4"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  }
}
